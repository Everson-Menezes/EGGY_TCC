@model EGGY_TCC_IDENTITY.ViewModels.NoticiaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Cadastrar</h1>

<h4>Noticia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" required />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Conteudo" class="control-label"></label>
                <textarea asp-for="Conteudo" class="form-control" required></textarea>
                <span asp-validation-for="Conteudo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPostagem" class="control-label"></label>
                <input asp-for="DataPostagem" class="form-control" required />
                <span asp-validation-for="DataPostagem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ID_Imagem" class="control-label"></label>
                <select asp-for="ID_Ong" class="form-control" asp-items="ViewBag.ID_Ong"></select>
            </div>
            <div class="form-group">
                <label asp-for="ID_Imagem" class="control-label"></label>
                <select asp-for="ID_Imagem" class="form-control" asp-items="ViewBag.ID_Imagem"></select>
            </div>
            <div class="form-group">
                <label asp-for="Num_Curtidas" class="control-label"></label>
                <input asp-for="Num_Curtidas" class="form-control" required />
                <span asp-validation-for="Num_Curtidas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

