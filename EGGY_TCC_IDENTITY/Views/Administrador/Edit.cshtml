@model EGGY_TCC_IDENTITY.ViewModels.RoleViewModels
@{
    ViewBag.Title = "Edita Role";
}
<h1>Edita Perfil</h1>
<form asp-action="Edit" method="post" class="mt-3">
    <div class="form-group">        
        <div class="col-md-4">
            <input type="hidden" asp-for="Id">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Perfil" class="control-label"></label>
        <div class="col-md-4">
            <input asp-for="Perfil" class="form-control">
            <span asp-validation-for="Perfil" class="text-danger"></span>
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Atualiza</button>
            <a asp-action="Index" class="btn btn-info">Voltar</a>
        </div>
    </div>
    <div class="card col-sm-5">
        <div class="card-header">
            <h3>Usuários com este perfil</h3>
        </div>
        <div class="card-body col-sm-5">
            @if (Model.UsuariosPerfil.Count > 0)
            {
                foreach (var item in Model.UsuariosPerfil)
                {
                    <h5 class="card-title">@item</h5>
                }
            }
            else
            {
                <h5 class="card-title">Sem usuários</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-action="EditUsersInRole" asp-controller="Administrador" asp-route-id="@Model.Id" class="btn btn-secondary" style="width:auto">Incluir/Remover Usuário</a>
        </div>
    </div>
</form>