@model List<EGGY_TCC_IDENTITY.ViewModels.UsuarioPerfilViewModel>
@{
    var roleId = ViewBag.roleId;
}
<form method="post">
    <div class="card col-sm-6">
        <div class="card-header">
            <h2>Incluir ou remover usuários</h2>
        </div>
        <div class="card-body col-sm-6">
            @for (int i = 0; i < Model.Count; i++)
            {
                Model[i].roleId = roleId;
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].UserId" />
                    <input type="hidden" asp-for="@Model[i].UserName" />
                    <input type="hidden" asp-for="@Model[i].roleId" />
                    <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].IsSelected">
                        @Model[i].UserName
                    </label>
                </div>
            }
        </div>
        <div class="card-footer">
            <input type="submit" value="Atualizar" class="btn btn-primary" style="width:auto" />
            <a asp-action="Index" asp-controller="Administrador" asp-route-roleId="@roleId"
               class="btn btn-info" style="width:auto">Voltar</a>
        </div>
    </div>
</form>
