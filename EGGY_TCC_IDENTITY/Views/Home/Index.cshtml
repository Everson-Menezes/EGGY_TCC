    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active" style="max-height: 400px; min-height: 250px;">
                @if (Model.ElementAtOrDefault(0) != null)
                {
                    <img class="d-block w-100" src="@Model.ElementAt(0).ImagemNoticia.imagemString" alt="@Model.ElementAt(0).Titulo.ToString()" />
                }
                else
                {
                    <img class="d-block w-100" style="max-height: 400px; min-height: 250px;" src="~/Imagens/noticia.png" alt="Noticia" />
                }
            </div>
