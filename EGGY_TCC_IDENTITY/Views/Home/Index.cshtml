             <img src="@Model.ElementAt(5).Imagem.imagemString" alt="@Model.ElementAt(5).Titulo.ToString()" />
         }
         else 
            { 
             <img src="~/Imagens/noticia.png" alt="Noticia" />
            }
        </section>

        <section id="home-item5">
            
                @foreach (var item in Model.OrderBy(x => x.Ong.NomeFantasia))
                {                    
                        <div class="grid-ong-noticia">
                            @Html.DisplayFor(modelItem => item.Ong.NomeFantasia)
                        </div>
                }
        </section>
    </section>