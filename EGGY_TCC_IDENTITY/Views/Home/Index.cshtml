@model IEnumerable<EGGY_TCC_IDENTITY.ViewModels.HomeViewModel>

@{
    ViewData["Title"] = "Home Page";
    ViewData["Mensagem"] = ViewData["Mensagem"];
}

<section class="home-destaques">

    <section class="home-item1">

        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    @if (Model.ElementAtOrDefault(0) != null)
                    {
                        <img class="img-carousel" src="@Model.ElementAt(0).ImagemNoticia.imagemString" alt="@Model.ElementAt(0).Titulo.ToString()" />
                    }
                    else
                    {
                        <img class="img-carousel" src="~/Imagens/noticia.png" alt="Noticia" />
                    }
                </div>
                <div class="carousel-item">
                    @if (Model.ElementAtOrDefault(1) != null)
                    {
                        <img class="img-carousel" src="@Model.ElementAt(1).ImagemNoticia.imagemString" alt="@Model.ElementAt(1).Titulo.ToString()" />
