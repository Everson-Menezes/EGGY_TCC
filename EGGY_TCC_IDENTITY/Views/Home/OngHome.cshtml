@model IEnumerable<EGGY_TCC_IDENTITY.ViewModels.OngViewModel>

@{
    ViewData["Title"] = "ONG's";
}

@if (Model.Count() > 0)
{
    <h1>ONG's cadastradas</h1>
    <ul>
        @foreach (var item in Model)
        {
        <li>            
            <a asp-action="Details" asp-controller="Ongs" asp-route-id="@item.ID_Ong">@Html.DisplayFor(modelItem => item.RazaoSocial)</a>
        </li>
        }
    </ul>
}
else
{
    <h1>Em Construção</h1>
    <h4>visão ongs</h4>
}
