@model EGGY_TCC_IDENTITY.ViewModels.ImagemViewModel

@{
    ViewData["Title"] = "Details";
}

<div>
    <input type="hidden" asp-for="@Model.ID_Imagem" />
    <dl style="margin:auto; position:relative;">
        <dt class = "card-header col-sm-3">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class = "card-body  col-sm-3">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class = "card-header  col-sm-3">
            @Html.DisplayNameFor(model => model.imagemString)
        </dt>
        <dd class = "card-body  col-sm-3">
            <img style="max-width:300px; max-height:150px;" src="@Model.imagemString" alt="@Model.Titulo" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-info">Voltar</a>
</div>
